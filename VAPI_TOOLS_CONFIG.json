[
    {
        "type": "function",
        "function": {
            "name": "bookOrder",
            "description": "Book a new taxi ride. Collects pickup, drop-off, phone, and preferences.",
            "parameters": {
                "type": "object",
                "properties": {
                    "pickupAddress": {
                        "type": "string",
                        "description": "The full address where the passenger should be picked up."
                    },
                    "deliveryAddress": {
                        "type": "string",
                        "description": "The full address where the passenger should be dropped off."
                    },
                    "customerPhone": {
                        "type": "string",
                        "description": "The customer's phone number."
                    },
                    "customerName": {
                        "type": "string",
                        "description": "Name of the customer (optional).",
                        "default": "Customer"
                    },
                    "driverNotes": {
                        "type": "string",
                        "description": "Special instructions for the driver (optional).",
                        "default": ""
                    },
                    "driverGender": {
                        "type": "string",
                        "enum": [
                            "Male",
                            "Female",
                            "Any"
                        ],
                        "description": "Preference for driver gender (default: Any).",
                        "default": "Any"
                    },
                    "additionalStops": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "A list of additional stop addresses between pickup and delivery (optional)."
                    }
                },
                "required": [
                    "pickupAddress",
                    "deliveryAddress",
                    "customerPhone"
                ]
            }
        }
    },
    {
        "type": "function",
        "function": {
            "name": "checkOrderStatus",
            "description": "Check the status of an existing order using the customer's phone number.",
            "parameters": {
                "type": "object",
                "properties": {
                    "customerPhone": {
                        "type": "string",
                        "description": "The customer's phone number to look up orders."
                    }
                },
                "required": [
                    "customerPhone"
                ]
            }
        }
    },
    {
        "type": "function",
        "function": {
            "name": "cancelOrder",
            "description": "Cancel an existing order using the order reference number or phone number.",
            "parameters": {
                "type": "object",
                "properties": {
                    "orderId": {
                        "type": "string",
                        "description": "The 6-digit order reference number provided during booking."
                    },
                    "customerPhone": {
                        "type": "string",
                        "description": "The customer's phone number to find and cancel the most recent order."
                    }
                }
            }
        }
    }
]